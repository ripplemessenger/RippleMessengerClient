{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "fs:default",
    "fs:allow-app-read-recursive",
    "fs:allow-app-write-recursive",
    {
      "identifier": "fs:scope",
      "allow": [
        {
          "path": "$APPDATA/**"
        },
        {
          "path": "$AppCache/**"
        },
        {
          "path": "$DOWNLOAD/**"
        }
      ]
    },
    "dialog:default"
  ]
}